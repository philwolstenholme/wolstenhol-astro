---
import { buildPageHref } from "../helpers/paginate";
import { StyledTextLink } from "./StyledTextLink";

const { hasPrev, hasNext, prevIndex, nextIndex, searchParam, anchor } =
  Astro.props;
---

<div class="flex justify-center mt-4 gap-4">
  {
    hasPrev && (
      <a
        class="bg-binding-dark text-white font-semibold rounded-full px-4 py-2 hover:underline focus:underline focus:outline-2 outline-black outline-offset-2"
        href={buildPageHref({
          currentUrl: new URL(Astro.request.url),
          index: prevIndex,
          param: searchParam,
          anchor,
        })}
      >
        &larr; Previous
      </a>
    )
  }
  {
    hasNext && (
      <a
        class="bg-binding-dark text-white font-semibold rounded-full px-4 py-2 hover:underline focus:underline focus:outline-2 outline-black outline-offset-2"
        href={buildPageHref({
          currentUrl: new URL(Astro.request.url),
          index: nextIndex,
          param: searchParam,
          anchor,
        })}
      >
        Next &rarr;
      </a>
    )
  }
</div>
