/** Uses the `Sec-CH-UA-Mobile` header if it's available to work out how many items to show per page */
export const getItemsPerPage = (
  astroRequest?: typeof Astro.request,
) => {
  return astroRequest
    ? astroRequest.headers.get("Sec-CH-UA-Mobile") === "?1"
      ? 5
      : 12
    : 12;
};
